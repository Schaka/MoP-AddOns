						<Anchor point="BOTTOMRIGHT" relativeTo="$parentClassIcon" />
					</Anchors>
				</Texture>
				<FontString name="$parentName" inherits="ALSPEC_CDTrackerNameFont" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="12" />
					</Size>
				</FontString>
			</Layer>
		</Layers>
	</Button>

